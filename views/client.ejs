<script>
  // video source: https://vimeo.com/90312869
  var textures,
    theta = 0,
    space

  function setup() {
    createCanvas(windowWidth, windowHeight, WEBGL)
    noStroke()
    textures = {
      earth: loadImage("/images/textures/earth.jpg"),
      sun: loadImage('/images/textures/sun.jpg')
    }


  }

  function draw() {
    background(0);
    push();
    var dirY = (mouseY / height - 0.5) * 4;
	var dirX = (mouseX / width - 0.5) * 4;
	directionalLight(204, 204, 204, dirX, dirY, 1);
    rotateY(theta);
    texture(textures.earth);
    sphere(150);
    pop();
    theta += 0.005;
  }

</script>
